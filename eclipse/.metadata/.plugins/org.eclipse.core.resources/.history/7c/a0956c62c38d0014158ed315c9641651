package com.plusmods.boomplus;

import cpw.mods.fml.common.Mod.EventHandler;
import net.minecraft.client.Minecraft;
import net.minecraft.stats.Achievement;
import net.minecraft.stats.AchievementList;
import net.minecraft.world.World;

public class BoomSpawn 
{
	Minecraft mc = Minecraft.getMinecraft();
	boolean firstUse = false;
	
	@EventHandler
	public void EntityJoinWorldEvent(World world)
	{
		if(!mc.thePlayer.getStatFileWriter().hasAchievementUnlocked(AchievementList.openInventory))
		{
			mc.thePlayer.openGui(BoomPlus.class, mcreator_welcomeGUI.GUIID, world, (int)mc.thePlayer.posX, (int)mc.thePlayer.posY, (int)mc.thePlayer.posZ);
			System.out.println("Running gui...");
		}
	}
}
